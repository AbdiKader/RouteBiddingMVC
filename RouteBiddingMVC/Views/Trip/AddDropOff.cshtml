@model RouteBiddingMVC.ViewModels.AddTripDropOffViewModel

@{
    ViewData["Title"] = "Add a stop";
}

<h2></h2>

<form asp-action="AddDropOff">
    <div class="form-horizontal">
        <h4>Add a Stop</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="form-group">
            <label asp-for="DropOffID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="DropOffID" asp-items="Model.DropOffs"></select>
                <span asp-validation-for="DropOffID" class="text-danger"></span>
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" name="TripID" value="@Model.Trip.ID" />
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
